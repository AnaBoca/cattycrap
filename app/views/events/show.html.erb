<p><%= pets.count %></p>

<div class="booyah-box col-10 offset-1 my-3 py-3">
  <h1 class="mb-2"><%= @event.vaccine_type %></h1>
  <p class="mb-2 font-italic"><%= @event.date %></p>
  <p><%= @event.notes %></p>
  <div class="float-right">
    <% if current_user && current_user == @event.user %>
      <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-pink' %>
      <%= link_to 'Destroy', event_path(@event), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
    <% end %>
  </div>
  <div class="clearfix"></div>
</div>